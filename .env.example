# Application
APP_NAME=codelab-core-service
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/codelab
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_TIMEOUT=30
QDRANT_PREFER_GRPC=false

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI / LiteLLM
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=  # Optional: for LiteLLM or custom endpoints (e.g., http://localhost:4000)
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# SSE
SSE_HEARTBEAT_INTERVAL=30
SSE_MAX_CONNECTIONS_PER_USER=1000
SSE_EVENT_BUFFER_SIZE=100
SSE_EVENT_TTL=300

# Agent Bus
AGENT_MAX_CONCURRENCY=3
AGENT_QUEUE_SIZE=100
AGENT_TASK_TIMEOUT=600

# Approval Manager
APPROVAL_TIMEOUT=300
APPROVAL_WARNING_BEFORE_TIMEOUT=60
APPROVAL_MAX_RETRIES=3

# Context Store
CONTEXT_MAX_VECTORS_PER_AGENT=1000000
CONTEXT_SEARCH_LIMIT=10
CONTEXT_PRUNE_THRESHOLD=0.9

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
